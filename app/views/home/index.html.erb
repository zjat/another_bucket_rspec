<div class='container'>

  <% if user_signed_in? %>
    <h3 class='capitalize'>Welcome, <%= current_user.first_name %></h3>
    <br />
    <div class='row'>
      <% current_user.buckets.each do |bucket| %>
        <div class='col s12 m6 l4'>
          <div class='card small'>
            <span class='card-title center-align white-text'>
              <%= button_to bucket.name, bucket_path(bucket), class: "btn white-text", method: :get %>
            </span>
            <div class='card-content white-text left-align'>              
              <% bucket.items.each do |item| %>
                <p><%= item.name %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  <br />
  <%= link_to 'New Bucket', new_bucket_path %>
  <%= link_to 'All Buckets', buckets_path(@bucket) %>
  <% end %>
</div>
